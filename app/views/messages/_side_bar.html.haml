.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__name
        = current_user.name
      %ul.side-bar__user-name__box__icon
        %li.side-bar__user-name__box__icon__icon1
          = link_to new_group_path do
            %i.fa.fa-edit.fa-white
        %li.side-bar__user-name__box__icon__icon2
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog.fa-white

  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
            